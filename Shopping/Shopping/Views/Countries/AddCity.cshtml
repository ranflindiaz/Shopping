@model CityViewModel
@{
    ViewData["Title"] = "AddCity";
}

<h1>AddCity</h1>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="AddCity">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="StateId"/>

            <partial name="_City"/>

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
                <a asp-action="DetailState" asp-route-id="@Model.StateId" class="btn btn-outline-success">Go back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}
}