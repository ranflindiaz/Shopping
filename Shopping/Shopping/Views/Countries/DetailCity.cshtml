@model City

@{
    ViewData["Title"] = "DetailCity";
}

<flash dismissable="true"/>

<h1>Details</h1>

<div class="mb-3">
    <partial name="_CityDetails" />
</div>

<div>
    <a asp-action="EditCity" asp-route-id="@Model?.Id" class="btn btn-outline-primary"><i class="fa-solid fa-pen-to-square"></i> Edit</a> |
    <a asp-action="DetailState" asp-route-id="@Model?.State.Id" class="btn btn-outline-success"><i class="fa-solid fa-circle-left"></i> Go Back</a>
</div>