@model StateViewModel

@{
    ViewData["Title"] = "Edit";
}

<flash dismissable="true"/>

<h1>Edit</h1>

<h4>State</h4>
<hr />
<div class="row">
    <div class="col-md-10">
        <form asp-action="EditState">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="CountryId" />

            <partial name="_AddState" />

            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-outline-primary" />
                <a asp-action="Details" asp-route-id="@Model.CountryId" class="btn btn-outline-success"><i class="fa-solid fa-circle-left"></i> Go back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
